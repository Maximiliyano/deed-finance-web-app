{
  "DatabaseSettings": {
    "Connection": "Server=localhost; Database=FinanceTrackerDB; Trust Server Certificate=True; Trusted_Connection=True;"
  },
  "PBApiSettings": {
    "BaseAddress": "https://api.privatbank.ua/p24api/pubinfo",
    "ExchangeQuery": "?exchange&json&coursid=11"
  },
  "WebUISettings": {
    "BaseAddress": "http://localhost:4200"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:8001" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
